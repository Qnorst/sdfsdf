<Window x:Class="TaskSearchWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskSearchWPF"
        mc:Ignorable="d"
        Title="Вход" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label Content="Никнейм" HorizontalContentAlignment="Left" FontSize="20" FontFamily="Arial" Width="165"/>
            <TextBox x:Name="LoginBox" TextWrapping="Wrap" FontSize="20" Width="161" FontFamily="Arial"/>
            <Label Content="Пароль" FontSize="20" FontFamily="Arial" Width="161" />
            <PasswordBox x:Name="PasswordBox" FontSize="20" Width="161" FontFamily="Arial"/>
            <Button x:Name="AuthentificationBtn" Content="Войти" Margin="0,10,0,0" FontSize="20" Height="41" Width="197" Click="AuthentificationBtn_Click"/>
            <Button x:Name="RegistrationBtn" Content="Зарегистрироваться" Margin="0,10,0,0" FontSize="20" Width="197" Click="RegistrationBtn_Click" Height="43"/>
        </StackPanel>
    </Grid>
</Window>

